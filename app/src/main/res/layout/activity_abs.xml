<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1029B1"
    tools:context=".AbsActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="bottom"
        android:text="Crunches; 3x12"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_below="@id/textView2"
        android:gravity="bottom"
        android:text="Heel touch; 3x12"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_below="@id/textView3"
        android:gravity="bottom"
        android:text="Plank; 1x30-60seconds"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/textView4"
        android:gravity="bottom"
        android:text="Sideplank; 1x10-20seconds, each side"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textView5"
        android:gravity="bottom"
        android:text="Knee touch; 3x12"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@id/textView6"
        android:gravity="bottom"
        android:text="Mountain climb; 3x12"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>
</RelativeLayout>